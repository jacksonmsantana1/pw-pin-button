{
  "name": "pw-pin-button",
  "description": "Component Button called pw-pin-button",
  "main": "app.js",
  "scripts": {
    "commit": "git-cz",
    "eslint": "eslint ./src --ext .js",
    "jscs": "jscs ./src",
    "lint": "npm run eslint && npm run jscs",
    "create-test": "webpack -p -bail --config webpack.test.js",
    "build-test": "node .bin/build-test",
    "test:unit": "karma start ./karma.conf.js --reporters nyan",
    "test:debug": "karma start ./karma.conf.js --single-run=false",
    "test": "npm run lint && npm run test:unit",
    "test:ci": "NODE_ENV=test-ci testem ci",
    "tdd": "NODE_ENV=tdd npm run build-test",
    "dev": "webpack-dev-server --inline --hot --progress --history-api-fallback --config webpack.config.js",
    "prebuild": "rm -rf dist index.*.js",
    "build": "npm-run-all --parallel 'build:*'",
    "build:main": "babel ./src/pw-pin-button/pw-pin-button.js -o ./index.js",
    "build:umd": "webpack --config webpack-production.config.js --output-filename index.umd.js",
    "build:umd.min": "webpack -p --bail --optimize-dedupe --config webpack-production.config.js --output-filename index.umd.min.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "author": "Jackson Martorano Sant'Ana",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer-loader": "^3.2.0",
    "babel-core": "^6.10.4",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "chai": "^3.5.0",
    "css-loader": "^0.23.1",
    "eslint": "^3.1.1",
    "eslint-config-airbnb-base": "^5.0.0",
    "eslint-plugin-import": "^1.11.1",
    "jscs": "^3.0.7",
    "karma": "^0.13.10",
    "karma-chrome-launcher": "^0.2.3",
    "karma-cli": "^0.1.2",
    "karma-mocha": "^0.2.0",
    "karma-nyan-reporter": "^0.2.4",
    "karma-sourcemap-loader": "^0.3.5",
    "karma-spec-reporter": "0.0.20",
    "commitizen": "^2.8.2",
    "semantic-release": "^4.3.5",
    "cz-conventional-changelog": "^1.1.6",
    "karma-webpack": "^1.7.0",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "mocha": "^2.5.3",
    "node-libs-browser": "^1.0.0",
    "sinon": "^1.17.4",
    "strip-loader": "^0.1.2",
    "style-loader": "^0.13.1",
    "testem": "^1.10.0-1",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "data.either": "^1.4.0",
    "data.maybe": "^1.2.2",
    "debug": "^2.2.0",
    "glob": "^7.0.5",
    "io-monad": "0.0.3",
    "ramda": "^0.21.0",
    "rx": "^4.1.0",
    "typesafety": "0.0.5",
    "webcomponents.js": "^0.7.22"
  },
  "config": {
    "commitzen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jacksonmsantana1/pw-pin-button.git"
  }
}
